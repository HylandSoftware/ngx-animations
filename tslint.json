{
  "extends": [
    "@ngweb/standards/config/tslint"
  ],
  "rules": {
    "component-class-suffix": [
      true,
      "Component",
      "View"
    ],
    "component-selector": [
      true,
      "element",
      [
        "app"
      ],
      "kebab-case"
    ],
    "directive-selector": [
      true,
      "attribute",
      [
        "app"
      ],
      "camelCase"
    ],
    "pipe-naming": [
      true,
      "camelCase",
      "app"
    ]
  },
  "rulesDirectory": [
    "node_modules/@nrwl/schematics/src/tslint"
  ],
  "nx-enforce-module-boundaries": [
    true,
    {
      "allow": [],
      "depConstraints": [
        {
          "sourceTag": "*",
          "onlyDependOnLibsWithTags": [
            "*"
          ]
        }
      ]
    }
  ]
}